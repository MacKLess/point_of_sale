<h1><%= @product.description %></h1>

<h3>Update Item</h3>
<form action="/product/<%= @product.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="description">Item Description:</label>
    <input name="description" type="text" class="form-control" value="<%= @product.description %>">
  </div>
  <div class="form-group">
    <label for="price">Cost of Item:</label>
    <input name="price" type="number" step="0.01" min="0.00" class="form-control" value="<%= @product.price %>">
  </div>
  <button type="submit" class="btn">Update</button>
</form>

<h3>Delete Item</h3>
<form action="/product/<%= @product.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn">Delete</button>
</form>
